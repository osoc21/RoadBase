{
	"version": "0.1",
	"prefixes": {
		"infrastructuur": "https://data.vlaanderen.be/ns/openbaardomein/infrastructuur#",
		"openbaardomein": "https://data.vlaanderen.be/ns/openbaardomein#",
		"skos": "http://www.w3.org/2004/02/skos/core#",
		"locn": "http://www.w3.org/ns/locn#",
		"dc": "http://purl.org/dc/terms/"
	},

	"resources": {
		"road-signal": {
			"name": "roadSignal",
			"class": "infrastructuur:Wegsignalisatie",
			"attributes": {
				"start_date": {
					"predicate": "openbaardomein:begindatum",
					"type": "xsd:dateTime"
				},
				"end_date": {
					"predicate": "openbaardomein:einddatum",
					"type": "xsd:dateTime"
				},
				"location": {
					"predicate": "locn:geometry",
					"type": "locn:Geometry"
				},
				"lighted": {
					"predicate": "infrastructuur:inwendigVerlicht",
					"type": "boolean"
				},
				"level": {
					"predicate": "openbaardomein:niveau",
					"type": "number"
				},
				"accuracy": {
					"predicate": "openbaardomein:nauwkeurigheid",
					"type": "url"
				},
				"relation": {
					"predicate": "dc:relation",
					"type": "url"
				}
			},
			"relationships": {
				"material": {
					"predicate": "infrastructuur:materiaal",
					"target": "material",
					"cardinality": "many"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-signal/"
		},


		"road-markings": {
			"name": "roadMarking",
			"class": "infrastructuur:Wegmarkering",
			"super": ["roadSignal"],
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-markings/"
		},


		"traffic-lights": {
			"name": "trafficLight",
			"class": "infrastructuur:Verkeerslicht",
			"super": ["roadSignal"],
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/traffic-lights/"
		}
	}
}
