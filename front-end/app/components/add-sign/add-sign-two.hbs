<section>
  <AuHeading @level='3' @skin='3'>
    Positie
  </AuHeading>

  <p>Defineer de positie & toebehorende straten van het bord.</p>

  <AuHeading @level='4' @skin='4' class="position__subtitle">
    Toebehorende straten
  </AuHeading>

  <form class="streets-form">
    <AuInput id='input-regular' class="hidden streets-form__input" placeholder="Voeg een straat toe ..." />
    <AuInput id='input-regular' class="position__street_input" placeholder="Voeg een straat toe ..." {{on "blur" this.addStreet}} />
  </form>

  <AuButton
    @skin='primary'
    @icon='add'
    @iconAlignment='left'
    {{on 'click' this.addStreetInput}}>
    Voeg een andere straat toe
  </AuButton>

  <AuHeading @level='4' @skin='4' class="position__subtitle">
    Rastercoördinaten
  </AuHeading>

  <div>
    <div class="position__coordinate">
      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.latDegrees}} />
        <span>°</span>
      </div>

      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.latMinutes}} />
        <span>'</span>
      </div>

      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.latSeconds}} />
        <span>''</span>
      </div>
      <span>{{this.latDirection}}</span>
    </div>

    <div class="position__coordinate">
      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.lonDegrees}} />
        <span>°</span>
      </div>

      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.lonMinutes}} />
        <span>'</span>
      </div>

      <div class="position__coordinate__section">
        <AuInput id='input-regular' class="position__coordinate__section__number" value={{this.lonSeconds}} />
        <span>''</span>
      </div>
      <span>{{this.lonDirection}}</span>
    </div>
  </div>


</section>