{{yield}}

{{!-- {{showFilter1 data= this.viewFilter}} --}}
<AuToolbar @nowrap={{true}}>
  <AuToolbarGroup>
      <AuHeading @level='3' @skin='3'>
        Taakbalk
      </AuHeading>
  </AuToolbarGroup>

  <AuToolbarGroup class="taskbar__actions">
    <AuButtonGroup>
      <AuButton @skin="tertiary" @icon='eye'
    @iconAlignment='left' {{on 'click' (fn @onClick false)}} class="{{unless @allowAddSign 'button-active' }}">
        Opstellingen bekijken
      </AuButton>
      <AuButton @skin="tertiary" @icon='add'
    @iconAlignment='left' {{on 'click' (fn @onClick true)}} class="{{if @allowAddSign 'button-active' }}">
        Nieuwe opstelling toevoegen
      </AuButton>
    </AuButtonGroup>
  </AuToolbarGroup>

  <AuToolbarGroup>
    <AuButton {{on 'click' this.viewFilter}}>
      Filteren
    </AuButton>
  </AuToolbarGroup>
</AuToolbar>

<Filter @showFilter={{this.showFilter}} />