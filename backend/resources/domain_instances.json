{
	"version": "0.1",
	"prefixes": {
		"mobiliteit": "https://data.vlaanderen.be/ns/mobiliteit#",
		"openbaardomein": "https://data.vlaanderen.be/ns/openbaardomein#",
		"schema": "https://schema.org/",
		"locn": "http://www.w3.org/ns/locn#"
	},

	"resources": {
		"road-sign-placement": {
			"name": "roadSignPlacement",
			"class": "mobiliteit:Opstelling",
			"attributes": {
				"location": {
					"predicate": "locn:geometry",
					"type": "locn:Geometry"
				}
			},
			"relationships": {
				"road-sign-instance": {
					"predicate": "mobiliteit:omvatVerkeersbord",
					"target": "roadSignInstance",
					"cardinality": "one"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-placements/"
		},


		"road-sign-instances": {
			"name": "roadSignInstance",
			"class": "mobiliteit:Verkeersbord",
			"attributes": {
				"direction": {
					"predicate": "mobiliteit:aanzicht",
					"type": "string"
				}
			},
			"relationships": {
				"road-sign-concept": {
					"predicate": "mobiliteit:realiseert",
					"target": "roadSignConcept",
					"cardinality": "one"
				},
				"height": {
					"predicate": "mobiliteit:opstelhoogte",
					"target": "roadSignHeight",
					"cardinality": "one"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-instances/"
		},


		"road-sign-combinations": {
			"name": "roadSignCombination",
			"class": "mobiliteit:Verkeersbord-Verkeersteken",
			"attributes": {
				"is_zone_begin": {
					"predicate": "mobiliteit:isBeginZone",
					"type": "boolean"
				},
				"is_zone_end": {
					"predicate": "mobiliteit:isEindeZone",
					"type": "boolean"
				}
			},
			"relationships": {
				"road-sign-concept": {
					"predicate": "mobiliteit:heeftVerkeersbordconcept",
					"target": "roadSignConcept",
					"cardinality": "one"
				},
				"road-sign-combination": {
					"predicate": "mobiliteit:heeftOnderbord",
					"target": "roadSignCombination",
					"cardinality": "one"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-combinations/"
		},


		"heights": {
			"name": "roadSignHeight",
			"class": "schema:QuantitativeValue",
			"attributes": {
				"unitCode": {
					"type": "string",
					"predicate": "schema:unitCode"
				},
				"value": {
					"type": "number",
					"predicate": "schema:value"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/heights/"
		}
	}
}
