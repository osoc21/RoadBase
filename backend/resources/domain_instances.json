{
	"version": "0.1",
	"prefixes": {
		"mobiliteit": "https://data.vlaanderen.be/ns/mobiliteit#",
		"openbaardomein": "https://data.vlaanderen.be/ns/openbaardomein#",
		"schema": "https://schema.org/",
		"locn": "http://www.w3.org/ns/locn#",
		"org": "http://www.w3.org/ns/org#",
		"dc": "http://purl.org/dc/terms/"
	},

	"resources": {
		"road-sign-placement": {
			"name": "roadSignPlacement",
			"class": "mobiliteit:Opstelling",
			"attributes": {
				"location": {
					"predicate": "locn:geometry",
					"type": "locn:Geometry"
				}
			},
			"relationships": {
				"road-sign-instance": {
					"predicate": "mobiliteit:omvatVerkeersbord",
					"target": "roadSignInstance",
					"cardinality": "one"
				},
				// 
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-placements/"
		},


		"road-sign-instances": {
			"name": "roadSignInstance",
			"class": "mobiliteit:Verkeersbord",
			"attributes": {
				"direction": {
					"predicate": "mobiliteit:aanzicht",
					"type": "string"
				},
				"picture": {
					"predicate": "mobiliteit:grafischeWeergave",
					"type": "url"
				}
			},
			"relationships": {
				"road-sign-concept": {
					"predicate": "mobiliteit:realiseert",
					"target": "roadSignConcept",
					"cardinality": "one"
				},
				"height": {
					"predicate": "mobiliteit:opstelhoogte",
					"target": "quantitativeValue",
					"cardinality": "one"
				},
				"board_size": {
					"predicate": "mobiliteit:Verkeersbord.afmeting",
					"type": "quantitativeValue",
					"cardinality": "one"
				},
				"board_width": {
					"predicate": "mobiliteit:breedte",
					"type": "quantitativeValue",
					"cardinality": "one"
				},
				"board_height": {
					"predicate": "mobiliteit:hoogte",
					"target": "quantitativeValue",
					"cardinality": "one"
				},
				"authority": {
					"predicate": "openbaardomein:beheerder",
					"target": "organization",
					"cardinality": "one"
				},
				"supplier": {
					"predicate": "mobiliteit:leverancier",
					"target": "organization",
					"cardinality": "one"
				},
				"operational_status": {
					"predicate": "mobiliteit:Verkeersbord.operationeleStatus",
					"target": "code",
					"cardinality": "one"
				},
				"comment": {
					"predicate": "schema:comment",
					"type": "string"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-instances/"
		},


		"road-sign-combinations": {
			"name": "roadSignCombination",
			"class": "mobiliteit:Verkeersbord-Verkeersteken",
			"attributes": {
				"is_zone_begin": {
					"predicate": "mobiliteit:isBeginZone",
					"type": "boolean"
				},
				"is_zone_end": {
					"predicate": "mobiliteit:isEindeZone",
					"type": "boolean"
				}
			},
			"relationships": {
				"road-sign-concept": {
					"predicate": "mobiliteit:heeftVerkeersbordconcept",
					"target": "roadSignConcept",
					"cardinality": "one"
				},
				"road-sign-combination": {
					"predicate": "mobiliteit:heeftOnderbord",
					"target": "roadSignCombination",
					"cardinality": "one"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/road-sign-combinations/"
		},


		"quantitative-values": {
			"name": "quantitativeValue",
			"class": "schema:QuantitativeValue",
			"attributes": {
				"unit_code": {
					"predicate": "schema:unitCode",
					"type": "string"
				},
				"value": {
					"predicate": "schema:value",
					"type": "number"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/quantitative-values/"
		},


		"codes": {
			"name": "code",
			"class": "skos:Concept",
			"attributes": {
				"code": {
					"predicate": "skos:notation",
					"type": "string"
				},
				"description": {
					"predicate": "skos:scopeNote",
					"type": "string"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/codes/"
		},


		"agents": {
			"name": "agent",
			"class": "dc:Agent",
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/agents/"
		},


		"organizations": {
			"name": "organization",
			"class": "org:Organization",
			"attributes": {
				"name": {
					"predicate": "skos:prefLabel",
					"type": "string"
				},
				"altname": {
					"predicate": "skos:altLabel",
					"type": "string"
				},
				"code": {
					"predicate": "skos:notation",
					"type": "string"
				}
			},
			"new-resource-base": "https://osoc-safe-open-roads.s.redpencil.io/organizations/"
		}
	}
}
