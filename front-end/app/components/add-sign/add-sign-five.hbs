<section>
  <AuHeading @level='3' @skin='3'>
    Overzicht
  </AuHeading>

  <AuContent class="content">
    <AuHeading @level='4' @skin='4' class="position__subtitle">
      Locatie
    </AuHeading>
    <p class="">{{ this.addSign.position.latDeg }}째 {{ this.addSign.position.latMin }}' {{ this.addSign.position.latSec }}" {{ this.addSign.position.latDirection }}</p>
    <p class="">{{ this.addSign.position.lonDeg }}째 {{ this.addSign.position.lonMin }}' {{ this.addSign.position.lonSec }}" {{ this.addSign.position.lonDirection }}</p>
    {{#each this.addSign.streets as |street|}}
      <p>{{ street }}</p>
    {{/each}}
    <AuHeading @level='4' @skin='4' class="position__subtitle">
      Windrichting
    </AuHeading>
    <AuHeading @level='4' @skin='4' class="position__subtitle">
      Plaatsingsdatum
    </AuHeading>
    <p class="">{{ this.addSign.direction }} 째N</p>
    <AuHeading @level='4' @skin='4' class="position__subtitle">
      Eigenaar
    </AuHeading>
    <p class="">{{ this.addSign.direction }} 째N</p>

    <AuButton @skin='primary' @icon='add' @iconAlignment='left' {{on 'click' this.log}}>
      Voeg een andere straat toe
    </AuButton>
  </AuContent>
</section>