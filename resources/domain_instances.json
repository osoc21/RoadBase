{
	"version": "0.1",
	"prefixes": {
		"roadbase": "https://roadbase.be/vocabularies/",
		"schema": "https://schema.org/",
		"org": "http://www.w3.org/ns/org#",
		"mobiliteit": "https://data.vlaanderen.be/ns/mobiliteit#",
		"openbaardomein": "https://data.vlaanderen.be/ns/openbaardomein#",
		"xsd": "http://www.w3.org/2001/XMLSchema#"
	},

	"resources": {
		"road-sign-instances": {
			"name": "roadSignInstance",
			"class": "roadbase:RoadSignInstance",
			"attributes": {
				"location_lat": {
					"type": "string",
					"predicate": "schema:latitude"
				},
				"location_long": {
					"type": "string",
					"predicate": "schema:longitude"
				},
				"height": {
					"type": "schema:QuantitativeValue",
					"predicate": "mobiliteit:hoogte"
				},
				"direction": {
					"type": "string",
					"predicate": "mobiliteit:aanzicht"
				},
				"authority": {
					"type": "org:Organization",
					"predicate": "openbaardomein:beheerder"
				}
			},
			"relationships": {
				"road-sign-concept": {
					"predicate": "mobiliteit:realiseert",
					"target": "roadSignConcept",
					"cardinality": "one"
				}
			},
			"new-resource-base": "https://roadbase.be/road-sign-instances/"
		}
	}
}
